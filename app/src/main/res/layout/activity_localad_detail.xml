<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pooja.anche.localads.LocalAdDetailActivity">

    <include
        android:id="@+id/ad_author_layout"
        layout="@layout/include_ad_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <include
        android:id="@+id/ad_text_layout"
        layout="@layout/include_ad_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ad_author_layout"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp" />

    <include
        android:id="@+id/ad_contact_layout"
        layout="@layout/include_ad_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ad_text_layout"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp" />

    <include
        android:id="@+id/image_sub_layout"
        layout="@layout/include_image_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ad_contact_layout"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp" />


</RelativeLayout>
